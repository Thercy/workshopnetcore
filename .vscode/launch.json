{
    "version": "0.2.0",
    "configurations": [        
        {
            "name": "VotingApp (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/VotingApp.Client/bin/Debug/netcoreapp1.1/VotingApp.Client.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "VotingApp (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/VotingApp.Api/bin/Debug/netcoreapp1.1/VotingApp.Api.dll",
            "args": [],
            "cwd": "${workspaceRoot}/src/VotingApp.Api",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}/?admin",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}/?admin"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}